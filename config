[core]
	editor = nvim
	pager = less -r
	whitespace = -space-before-tab,-indent-with-non-tab,-blank-at-eol,-blank-at-eof
	precomposeunicode = true
	quotePath = false
# Workaround for https://bugzilla.mindrot.org/show_bug.cgi?id=2824
	sshCommand = env SSH_AUTH_SOCK=${XDG_RUNTIME_DIR}/ssh-agent.socket ssh
[credential]
	helper = cache --timeout=300
[credential "https://github.com"]
	username = doronbehar
[credential "https://bitbucket.com"]
	username = doronbehar
[credential "https://gitlab.com"]
	username = doronbehar
[difftool "nvim-fugitive"]
	cmd = nvim -c "Gdiff" "$MERGED"
[difftool "nvimdiff"]
	cmd = nvim -d "$MERGED" "$LOCAL"
[diff]
	tool = nvimdiff
	mnemonicprefix = true
	submodule = log
[mergetool "nvimdiff"]
	cmd = nvim -d -O \"$BASE\" \"$REMOTE\" \"$LOCAL\" \"$MERGED\"
[mergetool "nvim-fugitive"]
	cmd = nvim -c "Gmerge" "$MERGED"
[merge]
	tool = nvimdiff
	conflictstyle = diff3
	stat = true
	summary = true
[alias]
	d = difftool
	l = log --decorate --graph
	co = checkout
	cmt = commit
	st = status
	br = branch
	ls = ls-files
	m = mergetool
	lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
	grog = log --graph --abbrev-commit --decorate --all \n--format=format:\"%C(bold blue)%h%C(reset) - %C(bold cyan)%aD%C(dim white) - %an%C(reset) %C(bold green)(%ar)%C(reset)%C(bold yellow)%d%C(reset)%n %C(white)%s%C(reset)\"
	logg = "!f() { git --no-pager log --graph --decorate $@ --color=always | env LESS='' less -R -S;}; f"
	commend = commit --amend --no-edit
	shorty = status --short --branch
	cof = checkout -p
	diffc = diff --cached
	dc = difftool --cached
	rst = reset
	lab = repo lab
	hub = repo hub
	fwd = "!f() { git log --reverse --pretty=%H ${1:-master} | grep -A 1 $(git rev-parse HEAD) | tail -n1 | xargs git checkout;}; f"
	ignore = "!f() { curl -L -s https://www.gitignore.io/api/$@; }; f"
	prev = checkout HEAD~1
	wdiff = diff --word-diff
[pager]
	stash = false
[push]
	default = simple
[url "ssh://git@github.com/"]
	insteadOf = https://github.com/
[url "ssh://git@github.com/"]
	insteadOf = "gh:"
[url "https://aur.archlinux.org/"]
